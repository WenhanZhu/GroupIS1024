@page
@model IndexModel
@{
    ViewData["Title"] = "FantasyFootball";
}
<html>
<head>

    <meta charset="utf-8" />
    <title>FantasyFootball</title>
   
    <!-- CSS Script -->
    <link rel="stylesheet" href="css/aboutmecss.css">
    <!--Google font "Caveat" for headings-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;500&display=swap" rel="stylesheet">

    <!--Google font "Kanit" for text-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;1,100&display=swap" rel="stylesheet">

    <!-- Font Awsome -->
    <script src="https://kit.fontawesome.com/fb4cce0071.js" crossorigin="anonymous"></script>

    <style>
        h1, h5 {
            font-family: 'Caveat', sans-serif;
        }

        p, a, i {
            font-family: 'Kanit', sans-serif;
            font-weight: bold;
        }

        .intro p {
            text-align: center;
        }
        h2 {
            margin-bottom:30px;
        }
        h3 {
            text-align: center;
        }

        .gmap_canvas {
            position: center;
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <!-- Intro-->
    <div class="intro text-col">
        <h1>FANTASTYFOODBALL</h1>
        <h1>The best platform for your favourite foodball team and player.</h1><br />
        <p>
            Do you want to know more about your favourite foodball team and players? <br />
            With FantasyFootball’s easy-to-use platform, you can find them with few click!<br />
            We have all everything you need for your favourte hometeam!
        </p>
        <br />
        <br />
        <button type="button" class="btn-lg btn-success intro-but">Create an account</button>
        <br />
        <br />
    </div>

    <!-- Features -->
    <div class="features">
        <h1>One place to tracl your team and more</h1><br />

        <div class="row">

            <div class="feature-item col-lg-4 col-md-4 icon">
                <a href="#payroll">
                    <center><i class="fa fa-solid fa-money-check-dollar fa-3x green-txt"></i></center>
                    <h3>Your Foodball Team</h3>
                </a>
            </div>

            <div class="feature-item col-lg-4 col-md-4 icon">
                <a href="#benefits">
                    <center><i class="fa fa-solid fa-briefcase-medical fa-3x green-txt"></i></center>
                    <h3> Foodball Player</h3>
                </a>
            </div>
            <div class="feature-item col-lg-4 col-md-4 icon">
                <a href="#time">
                    <center><i class="fa fa-regular fa-calendar-days fa-3x green-txt"></i></center>
                    <h3>Weekly playing schedual</h3>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="feature-item col-lg-4 col-md-4 icon">
                <a href="#hiring">
                    <center><i class="fa fa-solid fa-people-group fa-3x green-txt"></i></center>
                    <h3> Onboarding Coach</h3>
                </a>
            </div>
            <div class="feature-item col-lg-4 col-md-4 icon">
                <a href="#talentManagement">
                    <center><i class="fa fa-solid fa-star fa-3x green-txt"></i></center>
                    <h3>Star player of the team</h3>
                </a>
            </div>
            <div class="feature-item col-lg-4 col-md-4 icon">
                <a href="#insights">
                    <center><i class="fa fa-solid fa-chart-pie fa-3x green-txt"></i></center>
                    <h3>Insights and reporting</h3>
                </a>
            </div>
        </div>
    </div>


    <br />
    <br />
    <!--Get in touch section-->
    <section class="get-in-touch">
        <h2>
            Our office
        </h2>
            <div class="mapouter col-md-6 col-lg-6 col-sm-12 col-xs-12">
                <div class="gmap_canvas">
                    <iframe  id="gmap_canvas" src="https://maps.google.com/maps?q=university%20of%20cincinnati&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" title="Google Maps Location">
                    </iframe>
                    <a href="https://fmovies-online.net">
                    </a>
                    <br>
                  </div>
            </div>
        </section>
  </body>

</html>