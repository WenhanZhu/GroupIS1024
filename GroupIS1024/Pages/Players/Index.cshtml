@page
@model GroupIS1024.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    .header{
        font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        margin-top:30px;
        margin-left:10px
    }
    .main-header {
        font-size: x-large;
        font-weight: 900;
        font-style: italic
    }
    .sub-header{
        font-size:large;
        font-weight:500;
        font-style:normal;
    }
    .container{
        background-color:aquamarine;
    }
</style>
<div class="container">
    <div class="header">
        <div class="main-header">
            <h1>Favorite Players Feed!</h1>
        </div>
        <div class="sub-header">
            <h3>Find the feeds of your favourite players here!</h3>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].Position)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].Experience)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].University)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Player[0].Team)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Player)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Experience)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.University)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Team.TeamId)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.PlayerId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.PlayerId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.PlayerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>