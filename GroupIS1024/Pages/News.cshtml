@page
@model GroupIS1024.Pages.NewsModel
@{
    List<Sport> sports = (List<Sport>) ViewData["Sports"];
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
   "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"><html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<style>
<style>
        .cards {
      padding: 16px;
      text-align: center;
      background-color: #0064D5 ;
      color: white;
      border-radius:20px;
    }
    
        .column {
      float: left;
      width: 25%;
      padding: 0 5px;
    }

    .row {margin: 0 -5px;}

    /* Clear floats after the columns */
    .row:after {
      content: "";
      display: table;
      clear: both;
    }
        {font-family: Arial, Helvetica, sans-serif;}
    * {box-sizing: border-box;}

    input[type=text], select, textarea {
      width: 100%;
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      margin-top: 6px;
      margin-bottom: 16px;
      resize: vertical;
    }

    input[type=submit] {
      background-color:#0064D5 ;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-bottom:50px
    }

    input[type=submit]:hover {
      background-color:#0064D5 ;
    }
         .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border-radius: 0.25rem;
        border:0px;
    }
</style>
<style>
table,th,td{
        border: 1px solid black;
        border-radius: 10px;
        padding: 10px;
}
</style>
<div class="text-center">
    <table>
        <tr>
            <th>Author</th>
            <th>Content</th>
            <th>Title</th>
            <th>Time</th>
            <th>URL</th>

        </tr>
    @{
        foreach (Sport sport in sports)
        {
                <tr>
                    <td>@sport.Author</td>
                    <td>@sport.Content</td>
                    <td>@sport.Title</td>
                    <td>@sport.Time</td>
                    <td>@sport.ReadMoreUrl</td>

                </tr>
        }
    }
</table>
</div>